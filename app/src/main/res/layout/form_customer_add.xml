<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <Space
        android:layout_width="match_parent"
        android:layout_height="10sp"/>

    <TextView
        android:text="Registro de Clientes..."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:id="@+id/textVTitle"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="30sp"/>

    <TextView
        android:text="Nome:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textVName"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editTName"/>

    <TextView
        android:text="E-mail:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textVEmail"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editTEmail"/>

    <TextView
        android:text="Telefone:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textVLocalPhone"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editTLocalPhone"/>

    <TextView
        android:text="Celular:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textVMobilPhone"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editTMobilPhone"/>

    <TextView
        android:text="WhastUP:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textVWhatsUP"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editTWhatsUP"/>

    <Button
        android:id="@+id/btRegister"
        android:text="Registrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>